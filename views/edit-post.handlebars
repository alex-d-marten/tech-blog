<article>
    <a href="/dashboard"> &larr; Back to the dashboard</a>
    <h2 class="py-3">
        Edit Your Post
    </h2>

    <h3>Current Post Title: "{{post.title}}"</h3>
    <form class="edit-post-form py-3">
        <div class="py-2">
            <input id="edit-post" name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            {{post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} comments</a>
        </div>
        <button type="submit" class="btn btn-primary">Save post</button>
        <button type="button" class="btn btn-danger">Delete post</button>
    </form>
</article>
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit" class="btn btn-secondary">Add Comment</button>
    </div>
</form>

